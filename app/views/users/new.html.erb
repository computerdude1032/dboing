<% if signed_in? %>
<h1>Hey!</h1>
<p>You're already logged in as another user, so you probably reached this page in error. If you really want to create a new account, you'll have to <%= link_to "sign out", signout_path, :method => :delete %> first.</p>
<% else %>
<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object =>f.object %>
	<div class="field">
		<%= f.label :name, "First Name" %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :lname, "Last Name" %><br />
		<%= f.text_field :lname %>
	</div>
	<div class="username">
		<%= f.label :username, "Screen Name" %><br />
		<%= f.text_field :username%>
	</div>
	<div class="field">
		<%=f.label :email %><br />
		<%=f.text_field :email %>
	</div>
	<div class="field">
		<%=f.label :password %><br />
		<%=f.password_field :password %>
	</div>
	<div class="field">
		<%=f.label :password_confirmation, "Confirmation" %><br />
		<%=f.password_field :password_confirmation %>
	</div>
	<div class="actions">
		<%=f.submit "Sign up" %>
	</div>
<% end %>	
<% end %>